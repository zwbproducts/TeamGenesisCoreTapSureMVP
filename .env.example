# POS Tenant Secrets (client, merchant, insurer)
# IMPORTANT: JSON MUST be on a single line!
POS_TENANT_SECRETS='{"client":"dev-client","merchant":"dev-merchant","insurer":"dev-insurer"}'

# QR Code Settings
# "auto" = require QR only if tenant secrets are configured (smart mode)
# "on" = always require QR (strict security)
# "off" = never require QR (insecure, dev-only)
POS_QR_ENFORCEMENT=auto
POS_QR_MAX_AGE_SECONDS=900
POS_QR_NONCE_TTL_SECONDS=3600
POS_QR_MAX_FUTURE_SKEW_SECONDS=60
POS_REQUIRE_QR=0

# LLM Configuration (Ollama local or OpenAI)
LLM_BASE_URL=http://localhost:11434/v1
LLM_API_KEY=ollama
LLM_MODEL=llama3.1:8b
OPENAI_API_KEY=

# Frontend & Backend URLs
FRONTEND_ORIGIN=http://localhost:5173
VITE_API_URL=http://localhost:8000

# Optional: OCR (Windows only)
TESSERACT_CMD=
